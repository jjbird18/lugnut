<% content_for(:title, "Welcome") %>
<section id="homepage">

	<div class="container-fluid" id="hero">
		<div id="hero-hombre">
			<nav id="homepage-navigation">
				<div class="navbar-header">
					<button id="home-nav-btn" type="button" class="collapsed" data-toggle="collapse" data-target="#navbar-collapse-home">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
					</button>
				</div><!-- /navbar-header-->

				<div class="collapse" id="navbar-collapse-home">
					<%= render 'layouts/nav' %>
				</div><!-- /navbar-collapse-home-->
			</nav><!-- /homepage-navigation-->

			<div id="logo-wrap-home">
				<div id="logo">
					<%= link_to (image_tag('logo-lugnut-home.png', alt: 'Lugnut')), root_path %>
				</div><!-- /logo -->
			</div><!-- /nav-logo-wrap -->

			<div class="container">
				<div class="row clearfix">
					<main class="col-xs-12 col-sm-5 pull-right clearfix" id="headline">
						<div class="col-xs-12 col-sm-11 pull-right">
							<h3>Connect to your world</h3>
						</div>
						<div class="col-xs-10 col-sm-9 pull-right">
							<h4>We offer today's most innovative</h4> 
							<h4>and desired connected car</h4> 
							<h4>products. Learn how they can can</h4> 
							<h4>save you time and money.</h4>
						</div><!-- /h4 wrapper -->
						<div class="col-xs-4 pull-right" id="hero-cta">
							<a href="/" title="Learn more"><%= icon('play') %></a>
						</div><!-- /hero-cta -->
					</main><!-- /headline -->
				</div><!-- row -->
			</div><!-- /container -->
		</div><!--/hero-hombre -->
	</div><!-- /hero -->

	<div class="container-fluid" id="content-main">
		<div class="row-fluid">
			<div class="container">	
				<div class="row-fluid text-left clearfix" id="homepage-x">
						<% @blogs.take(3).each do |blog| %>
						    <div class="col-xs-12 col-sm-4 text-left">
						    	<%= link_to image_tag(blog.image.url(:large), alt: blog.title), blog_path(blog), class: 'blog-img' %>
								<div class="row-fluid clearfix">
									<div class="icon-wrap">
										<%= image_tag('favicon.png', alt: 'Lugnut Logo') %>
									</div>
									<div class="text-wrap text-left">
										<h5><%= link_to blog.title, blog_path(blog) %></h5>
										<p><%= truncate(blog.description, length: 100) %></p>
										<div class="pull-right">
											<%= link_to "Learn more" , blog_path(blog), class: 'cta' %>
										</div>
									</div>
								</div>
						    </div><!-- /col-xs-6 -->
						<% end %>
				</div><!-- /row -->
			</div><!-- /container -->
		</div><!-- /row -->
	</div><!-- /content-main -->

</section><!-- /homepage-->