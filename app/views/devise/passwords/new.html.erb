<% content_for(:title, "Forgot your password?") %>
<div class="container-fluid" id="content-main">
  <div class="row-fluid">
    <div class="container"> 
      <div class="row-fluid clearfix">
        <div class="col-xs-12 col-sm-8 text-left">
          <h1><%= yield(:title) %></h1>

          	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :email, placeholder: "Email", required: true, autofocus: true %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Send me reset password instructions", class: "btn cta" %>
			  </div>
			<% end %>

			<div class="shared-login-links">
				<%= render "devise/shared/links" %>
			</div><!--/shared-login-link -->
        </div><!-- /col-xs-12 -->
      </div><!-- /row -->
    </div><!-- /container -->
  </div><!-- /row -->
</div><!-- /content-main -->
