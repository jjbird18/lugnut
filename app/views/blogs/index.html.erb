<% content_for(:title, "Cross Marketing Management") %>
<% if user_signed_in? && current_user.admin == 1 %>
  <div class="container-fluid" id="content-main">
    <div class="row-fluid">
      <div class="container"> 
        <div class="row-fluid clearfix">
          <div class="col-xs-12 text-left">
            <h1><%= yield(:title) %></h1>
          </div><!-- /col-xs-12 -->
        </div><!-- /row --> 
        <div class="row-fluid clearfix">
          <div class="col-xs-4 text-left">
            <h4 class="text-left">Title</h4>
          </div><!-- /col-xs-4 -->
          <div class="col-xs-6 text-left">
            <h4 class="text-left">Description</h4>
          </div><!-- /col-xs-6 -->
        </div><!-- /row -->
        <% @blogs.each do |blog| %>
          <div class="row-fluid clearfix">
            <div class="col-xs-4 text-left">
              <p><%= link_to blog.title, edit_blog_path(blog) %></p>
            </div><!-- /col-xs-4 -->
            <div class="col-xs-6 text-left">
              <p><%= truncate(blog.description, length: 60) %></p>
            </div><!-- /col-xs-6 -->
          </div><!-- /row -->
      <% end %>
        <div class="row-fluid clearfix">
          <div class="col-xs-12 text-left">
            <%= link_to 'New', new_blog_path, class: 'cta' %>
          </div><!-- /col-xs-6 -->
        </div><!-- /row -->
      </div><!-- /container -->
    </div><!-- /row -->
  </div><!-- /content-main -->
<% else %>
  <div class="container-fluid" id="content-main">
    <div class="row-fluid">
      <div class="container"> 
        <div class="row-fluid clearfix">
          <div class="col-xs-12 text-left">
            <h3>What are you doing here Dave?</h3>
          </div><!-- /col-xs-6 -->
        </div><!-- /row -->
      </div><!-- /container -->
    </div><!-- /row -->
  </div><!-- /content-main -->
<% end %>
