<div class="container-fluid" id="content-main">
  <div class="row-fluid">
    <div class="container"> 
      <div class="row-fluid clearfix">
        <div class="col-xs-12 text-left">
          <h1><%= yield(:title) %></h1>
        </div><!-- /col-xs-12 -->
