      <div class="row-fluid clearfix">
        <div class="col-xs-12 text-left">
          <%= render 'form' %>
        </div><!-- /col-xs-12 -->
      </div><!-- /row -->
      <div class="row-fluid clearfix">
        <div class="col-xs-12 text-left">
			<%= link_to 'Back', blogs_path %>
