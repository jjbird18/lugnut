<% content_for(:title, @productline.title) %>
<div class="container-fluid" id="content-main">
	<div class="row-fluid">
		<div class="container">	
			<div class="row-fluid clearfix">
				<div class="col-xs-12 text-left">
					<h1><%= @productline.title %></h1>
					<p><%= @productline.textdescription %></p>
					<% if user_signed_in? && @productline.user_id == current_user.id %>
						<h6>This is your productline, so you may... <%= link_to "Edit", edit_productline_path(@productline) %> or 
						<%= link_to "Delete", productline_path(@productline), method: :delete, data: { confirm: "Are you sure?" } %></h6>
					<% end %>
				</div><!-- /col-xs-12 -->
			</div><!-- /row -->
			<div class="row-fluid clearfix">
				<div class="col-xs-12 text-left">
					<%= link_to "All Productlines", productlines_path %>
				</div><!-- /col-xs-12 -->
			</div><!-- /row -->
		</div><!-- /container -->
	</div><!-- /row -->
</div><!-- /content-main -->