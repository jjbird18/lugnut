<% content_for(:title, "Edit Post") %>
<div class="container-fluid" id="content-main">
	<div class="row-fluid">
		<div class="container">	
			<div class="row-fluid clearfix">
				<div class="col-xs-12 text-left">
					<h1><%= yield(:title) %></h1>
				</div><!-- /col-xs-12 -->
			</div><!-- /row -->
			<div class="row-fluid clearfix">
				<div class="col-xs-12 text-left">
					<div class="form">
						<%= simple_form_for @post do |f| %>
							<div class="form-inputs">
								<%= f.input :title, placeholder: "Title" %>
								<%= f.input :content, placeholder: "Content" %>
							</div>	
							<div class="form-actions">
								<%= f.button :submit, "Update post", class: 'cta' %>
							</div>	
						<% end %>
					</div>
				</div><!-- /col-xs-12 -->
			</div><!-- /row -->
			<div class="row-fluid clearfix">
				<div class="col-xs-12 text-left">
					<%= link_to "Cancel", post_path %>
				</div><!-- /col-xs-12 -->
			</div><!-- /row -->
		</div><!-- /container -->
	</div><!-- /row -->
</div><!-- /content-main -->