<div class="form">
	<%= simple_form_for @post do |f| %>
		<div class="form-inputs">
			<%= f.input :title, placeholder: "Title" %>
			<%= f.input :content, placeholder: "Content" %>
		</div>	
		<div class="form-actions">
			<%= f.button :submit, "Create post", class: 'cta' %>
		</div>	
	<% end %>
</div>